<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.DashboardFragment">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        app:rippleColor="@color/colorRed"
        app:tint="@color/white"
        app:borderWidth="0dp"
        app:backgroundTint="@color/orange"
        app:elevation="6dp"
        app:fabSize="normal"
        android:src="@drawable/baseline_add_circle_24"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blue"
        android:elevation="@dimen/_4sdp"
        app:title="Home"
        android:id="@+id/tool_bar">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:background="@drawable/border_bottom"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">
            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:gravity="center"
                android:text="Name1"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:textSize="@dimen/text_size_titles"
                android:textColor="@color/title_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">
            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:gravity="center"
                android:text="Name2"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:textSize="@dimen/text_size_titles"
                android:textColor="@color/title_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">
            <TextView
                android:id="@+id/name3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:gravity="center"
                android:text="Name3"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:textSize="@dimen/text_size_titles"
                android:textColor="@color/title_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">
            <TextView
                android:id="@+id/name4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:gravity="center"
                android:text="Name4"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:textSize="@dimen/text_size_titles"
                android:textColor="@color/title_color" />
        </LinearLayout>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        tools:listitem="@layout/list_dashboard"
        tools:itemCount="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5sdp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">

            <TextView
                android:id="@+id/result1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:text="0"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_titles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">

            <TextView
                android:id="@+id/result2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:text="0"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_titles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">

            <TextView
                android:id="@+id/result3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:text="0"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_titles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red">

            <TextView
                android:id="@+id/result4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_left_bottom"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_1sdp"
                android:text="0"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_titles" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>